<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
	namespace：必须与对应的接口全类名一致
	id:必须与对应接口的某个对应的方法名一致
	
 -->
<mapper namespace="com.tgb.mapper.UserMapper">
	
	<insert id="save" parameterType="User">
		insert into t_user(user_name,user_age,user_phone,user_password) values(#{userName},#{age},#{phone},#{password})
	</insert>
	
	<update id="update" parameterType="User">
		update t_user set user_name=#{userName},user_age=#{age},user_password=#{password} where user_id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from t_user where user_id=#{id}
	</delete>
	
	 <!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->  
	<select id="findById" parameterType="int" resultType="User">
		select user_id id,user_name userName,user_age age from t_user where user_id=#{id}
	</select>
	<select id="findByPhone" parameterType="String" resultType="User">
		select user_id id,user_name userName,user_age age ,user_password password from t_user where user_phone=#{phone}
	</select>
	
	<select id="findAll" resultType="User">
		select user_id id,user_name userName,user_age age,user_phone phone from t_user
	</select>
	
	<select id="findClassAll" resultType="UserClass">
		select class_id classId,class_name className from t_class
	</select>
	
	
	
	
</mapper>